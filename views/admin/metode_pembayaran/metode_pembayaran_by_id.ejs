<!-- Head -->
<%- include('../template/head') %>

    <body>
        <div id="app">
            <!-- Sidebar -->
            <%- include('../template/sidebar') %>
                <div id="main">

                    <!-- Header -->
                    <%- include('../template/header') %>

                        <div class="page-heading">
                            <div class="page-title">
                                <div class="row">
                                    <div class="col-12 col-md-6 order-md-1 order-last">
                                        <h3>Metode Pembayaran</h3>
                                    </div>
                                    <div class="col-12 col-md-6 order-md-2 order-first">
                                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                                            <ol class="breadcrumb">
                                                <li class="breadcrumb-item"><a
                                                        href="http://127.0.0.1:3030/admin/dashboard">Dashboard</a></li>
                                                <li class="breadcrumb-item"><a
                                                        href="http://127.0.0.1:3030/admin/metode_pembayaran">Metode
                                                        Pembayaran</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">
                                                    <%= metode_pembayaran_by_id[0].id_mp %>
                                                </li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Basic Tables start -->
                        <section class="section">
                            <div class="card shadow">
                                <div class="card-body">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    ID Metode Pembayaran
                                                </div>
                                                <div class="col-6">
                                                    <span id="id_mp">
                                                        <%= metode_pembayaran_by_id[0].id_mp %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Nama MP
                                                </div>
                                                <div class="col-6">
                                                    <span id="nama_mp">
                                                        <%= metode_pembayaran_by_id[0].nama_mp %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Biaya MP
                                                </div>
                                                <div class="col-6">
                                                    <span id="biaya_mp">
                                                        <%= metode_pembayaran_by_id[0].biaya_mp %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Penyesuaian Biaya
                                                </div>
                                                <div class="col-6">
                                                    <span id="penyesuaian_biaya">
                                                        <%= metode_pembayaran_by_id[0].penyesuaian_biaya %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Publish
                                                </div>
                                                <div class="col-6">
                                                    <span id="publish">
                                                        <%= metode_pembayaran_by_id[0].publish %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Status MP
                                                </div>
                                                <div class="col-6">
                                                    <span id="status_mp">
                                                        <%= metode_pembayaran_by_id[0].status_mp %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>


                                    </ul>
                                </div>
                                <div class="card-footer">
                                    <div id="changeUser" style="float: right;">
                                        <span>Ingin mengupdate data?</span> <button id="btnModalUpdate"
                                            class="btn btn-outline-primary">Klik
                                            disini</button>
                                    </div>
                                </div>
                            </div>

                        </section>
                        <!-- Basic Tables end -->

                        <!-- Footer -->
                        <%- include('../template/footer') %>
                </div>
        </div>

        <div class="modal fade" id="modalUpdate" tabindex="-1" aria-labelledby="modalUpdateLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="modalUpdateLabel">Update data</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 mb-2" hidden>
                                <label for="id_mp" class="form-label">ID MP</label>
                                <input type="text" class="form-control" id="id_mp_update"
                                    value="<%= metode_pembayaran_by_id[0].id_mp %>">
                            </div>

                            <div class="col-12 mb-2">
                                <label for="nama_mp" class="form-label">Nama MP</label>
                                <input type="text" class="form-control" id="nama_mp_update"
                                    value="<%= metode_pembayaran_by_id[0].nama_mp %>">
                            </div>

                            <div class="col-12 mb-2">
                                <label for="biaya_mp" class="form-label">Biaya MP</label>
                                <input type="text" class="form-control" id="biaya_mp_update"
                                    value="<%= metode_pembayaran_by_id[0].biaya_mp %>">
                            </div>

                            <div class="col-12 mb-2">
                                <label for="penyesuaian_biaya" class="form-label">Penyesuaian Biaya</label>
                                <!-- <input type="penyesuaian_biaya" class="form-control" id="penyesuaian_biaya_update"
                                    value="<%= metode_pembayaran_by_id[0].penyesuaian_biaya %>"> -->
                                <select class="form-select"
                                    id="penyesuaian_biaya_update">
                                    <% if(metode_pembayaran_by_id[0].penyesuaian_biaya=="Persentase" ) { %>
                                        <option value="">- Pilih Penyesuaian Biaya -</option>
                                        <option value="Persentase" selected>Persentase</option>
                                        <option value="Fixed">Fixed</option>
                                        <option value="Persentase + Fixed">Persentase + Fixed</option>
                                        <% } else if(metode_pembayaran_by_id[0].penyesuaian_biaya=="Fixed" ) {%>
                                            <option value="">- Pilih Penyesuaian Biaya -</option>
                                            <option value="Persentase">Persentase</option>
                                            <option value="Fixed" selected>Fixed</option>
                                            <option value="Persentase + Fixed">Persentase + Fixed</option>
                                            <% } else
                                                if(metode_pembayaran_by_id[0].penyesuaian_biaya=="Persentase + Fixed" )
                                                {%>
                                                <option value="">- Pilih Penyesuaian Biaya -</option>
                                                <option value="Persentase">Persentase</option>
                                                <option value="Fixed">Fixed</option>
                                                <option value="Persentase + Fixed" selected>Persentase + Fixed</option>
                                                <%} else if(metode_pembayaran_by_id[0].penyesuaian_biaya=="" ) {%>
                                                    <option value="" selected>- Pilih Penyesuaian Biaya -</option>
                                                    <option value="Persentase">Persentase</option>
                                                    <option value="Fixed">Fixed</option>
                                                    <option value="Persentase + Fixed">Persentase + Fixed</option>
                                                    <% }%>
                                </select>


                            </div>

                            <div class="col-12 mb-2">
                                <label for="publish" class="form-label">Publish</label>
                                <select class="form-select form-select-sm" aria-label=".form-select sm example"
                                    id="publish_update">
                                    <% if(metode_pembayaran_by_id[0].publish=="Yes" ) { %>
                                        <option value="">- Pilih Publish MP -</option>
                                        <option value="Yes" selected>Yes</option>
                                        <option value="No">No</option>
                                        <% } else if(metode_pembayaran_by_id[0].publish=="No" ) {%>
                                            <option value="">- Pilih Publish MP -</option>
                                            <option value="Yes">Yes</option>
                                            <option value="No" selected>No</option>
                                            <%} else if(metode_pembayaran_by_id[0].publish=="" ) {%>
                                                <option value="" selected>- Pilih Publish MP -</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                                <% }%>
                                </select>
                            </div>


                            <div class="col-12 mb-2">
                                <label for="status_mp" class="form-label">Status MP</label>
                                <select class="form-select"
                                    id="status_mp_update">
                                    <% if(metode_pembayaran_by_id[0].status_mp=="Aktif" ) { %>
                                        <option value="">- Pilih Status MP -</option>
                                        <option value="Aktif" selected>Aktif</option>
                                        <option value="Tidak aktif">Tidak aktif</option>
                                        <% } else if(metode_pembayaran_by_id[0].status_mp=="Tidak aktif" ) {%>
                                            <option value="">- Pilih Status MP -</option>
                                            <option value="Aktif">Aktif</option>
                                            <option value="Tidak aktif" selected>Tidak aktif</option>
                                            <%} else if(metode_pembayaran_by_id[0].status_mp=="" ) {%>
                                                <option value="" selected>- Pilih Status MP -</option>
                                                <option value="Aktif">Aktif</option>
                                                <option value="Tidak aktif">Tidak aktif</option>
                                                <%  }%>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnSimpanUpdate">Simpan</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- JS -->
        <%- include('../template/js') %>
            <script>
                $(document).ready(function () {
                    // $("#modalUpdate").modal("show")
                    $("#btnModalUpdate").on('click', function () {
                        $("#modalUpdate").modal("show")
                    });

                    $("#btnSimpanUpdate").on('click', function () {
                        const dataMP = {
                            id_mp: $("#id_mp_update").val(),
                            nama_mp: $("#nama_mp_update").val(),
                            biaya_mp: $("#biaya_mp_update").val(),
                            penyesuaian_biaya: $("#penyesuaian_biaya_update").val(),
                            publish: $("#publish_update").val(),
                            status_mp: $("#status_mp_update").val()
                        }
                        if (Object.values(dataMP).every(val => val !== null && val !== undefined && val !== "")) {
                            axios({
                                method: 'post', url: '/admin/metode_pembayaran/doUpdateMP', data: {
                                    dataMP
                                }
                            }).then((responseUpdate) => {
                                if (responseUpdate.data.statusUpdate == "OK") {
                                    $("#modalUpdate").modal('hide')
                                    let timerInterval
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success',
                                        text: 'Data telah berhasil diupdate.',
                                        timer: 1500,
                                        timerProgressBar: true,
                                        showConfirmButton: true,
                                        didOpen: () => {
                                            Swal.showLoading()
                                        },
                                        willClose: () => {
                                            clearInterval(timerInterval)
                                        }
                                    }).then((result) => {
                                        /* Read more about handling dismissals below */
                                        if (result.dismiss === Swal.DismissReason.timer) {
                                            location.reload()
                                        }
                                    })
                                }
                            });
                        }
                        else {
                            Swal.fire('Gagal', 'Maaf, Silahkan isi semua data dahulu.', 'info');
                        }
                    })

                });
            </script>
    </body>

    </html>