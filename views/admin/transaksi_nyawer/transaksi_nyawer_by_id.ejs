<!-- Head -->
<%- include('../template/head') %>

    <body>
        <div id="app">
            <!-- Sidebar -->
            <%- include('../template/sidebar') %>
                <div id="main">

                    <!-- Header -->
                    <%- include('../template/header') %>

                        <div class="page-heading">
                            <div class="page-title">
                                <div class="row">
                                    <div class="col-12 col-md-6 order-md-1 order-last">
                                        <h3>Transaksi Sawerin</h3>
                                    </div>
                                    <div class="col-12 col-md-6 order-md-2 order-first">
                                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                                            <ol class="breadcrumb">
                                                <li class="breadcrumb-item"><a
                                                        href="http://127.0.0.1:3030/admin/dashboard">Dashboard</a></li>
                                                <li class="breadcrumb-item"><a
                                                        href="http://127.0.0.1:3030/admin/transaksi_nyawer">Transaksi
                                                        Nyawer</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">
                                                    <%= trx_nyawer_by_id[0].id_transaksi %>
                                                </li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Basic Tables start -->
                        <section class="section">
                            <div class="card shadow">
                                <div class="card-body">
                                    <!-- trx_nyawer_by_id -->
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    ID Transaksi
                                                </div>
                                                <div class="col-6">
                                                    <span id="id_transaksi">
                                                        <%= trx_nyawer_by_id[0].id_transaksi %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Reff PG
                                                </div>
                                                <div class="col-6">
                                                    <span id="reff_pg">
                                                        <%= trx_nyawer_by_id[0].reff_pg %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Nama Pengirim
                                                </div>
                                                <div class="col-6">
                                                    <span id="nama_pengirim">
                                                        <%= trx_nyawer_by_id[0].nama_pengirim %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Nominal
                                                </div>
                                                <div class="col-6">
                                                    <span id="nominal">
                                                        <%= trx_nyawer_by_id[0].nominal %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Pesan
                                                </div>
                                                <div class="col-6">
                                                    <span id="pesan_pengirim">
                                                        <%= trx_nyawer_by_id[0].pesan_pengirim %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Metode Pembayaran
                                                </div>
                                                <div class="col-6">
                                                    <span id="no_telp">
                                                        <%= trx_nyawer_by_id[0].nama_mp %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <div class="row mb-2">
                                                        <div class="col-6">
                                                            Biaya Admin
                                                        </div>
                                                        <div class="col-5">
                                                            <span id="biaya_admin" style="float: right;">
                                                                <%= trx_nyawer_by_id[0].biaya_admin %>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="row mb-2">
                                                        <div class="col-6">
                                                            Total Terima
                                                        </div>
                                                        <div class="col-5">
                                                            <span id="total_terima" style="float: right;">
                                                                <%= trx_nyawer_by_id[0].total_terima %>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Waktu Transaksi
                                                </div>
                                                <div class="col-6">
                                                    <span id="waktu_transaksi">
                                                        <%= trx_nyawer_by_id[0].waktu_transaksi %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-group-item">
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    Status Transaksi
                                                </div>
                                                <div class="col-6">
                                                    <span id="status_transaksi">
                                                        <%= trx_nyawer_by_id[0].status_transaksi %>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <div class="card-footer">
                                    <button style="float: right;" class="btn btn-primary" id="btnCekTransaksi">Cek
                                        Transaksi</button>
                                </div>
                            </div>

                        </section>
                        <!-- Basic Tables end -->

                        <!-- Footer -->
                        <%- include('../template/footer') %>
                </div>
        </div>

        <!-- JS -->
        <%- include('../template/js') %>
            <script>
                $(document).ready(function () {
                    {
                        $("#btnCekTransaksi").on('click', function () {
                            const id_transaksi = $("#id_transaksi").text().trim()
                            if (id_transaksi) {
                                const dataCekTransaksi = {
                                    id_transaksi: id_transaksi
                                }

                                axios({
                                    method: 'post', url: '/admin/transaksi_nyawer/cek_transaksi_nyawer', data: {
                                        dataCekTransaksi
                                    }
                                }).then((responseCekTransaksi) => {
                                    const responsePG = responseCekTransaksi.data.dataPembayaranTransaksiNyawer.pg
                                    const responseSistem = responseCekTransaksi.data.dataPembayaranTransaksiNyawer.sistem

                                    Swal.fire({
                                        title: 'Info',
                                        text: 'Status Transaksi dari PG: ' + responsePG.statusMessage,
                                        icon: 'info',
                                        confirmButtonColor: '#3085d6',
                                        confirmButtonText: 'Ok'
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            Swal.fire('Info', 'Status Transaksi dari Sistem: ' + responseSistem.status_transaksi, 'info');
                                        }
                                    })
                                });
                            }
                        })
                    }
                })
            </script>
    </body>

    </html>